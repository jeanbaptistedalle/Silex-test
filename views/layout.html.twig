<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/lib/bootstrap-toastr/toastr.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/lib/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/test.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/test.css" rel="stylesheet">
    {% block css %}{% endblock %}
    <title>Test - {% block title %}{% endblock %}</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}">Test</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-target">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('admin') }}"><span class="glyphicon glyphicon-cog"></span> Administration</a></li>
                            {% endif %}
                            {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="glyphicon glyphicon-user"></span> Bienvenue, {{ app.user.username }} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="glyphicon glyphicon-user"></span> Non connnecté <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('login') }}">Connexion</a></li>
                                </ul>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div><!-- /.container -->
        </nav>
        <div id="content">{% block content %}{% endblock %}</div>
    </div>

    <div class="modal fade" id="fillableModal" tabindex="-1" role="dialog" aria-labelledby="fillableModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="fillableModal_title">Modal title</h4>
                </div>
                <div class="modal-body" id="fillableModal_body">
                    ...
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hdFlashBagUrl" value="{{ path('flashbag_json')}}"/>
    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery-3.1.0.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- JavaScript Toastr plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap-toastr/toastr.min.js"></script>
    <!-- JavaScript dataTables plugin -->
    <script src="{{ app.request.basepath }}/lib/dataTables/js/jquery.dataTables.min.js"></script>
    <!-- JavaScript dataTables bootstrap plugin -->
    <script src="{{ app.request.basepath }}/lib/dataTables/js/dataTables.bootstrap.min.js"></script>
    <!-- Helper -->
    <script src="{{ app.request.basepath }}/js/helper.js"></script>
{% block javascript %}{% endblock %}
{#{% include '_toaster.html.twig' %}#}
</body>
</html>


